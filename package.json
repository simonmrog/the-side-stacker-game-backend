  "dependencies": {
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "tsx": "^3.12.7",
